{
	"user_id": "{USER_ID}",
	"view": {
		"type": "home",
		"blocks": [
			{
				"type": "section",
				"text": {
					"type": "mrkdwn",
					"text": "You can customize the settings for your random avatar here."
				}
			},
			{
				"type": "divider"
			},
			{
				"type": "context",
				"elements": [
					{
						"type": "mrkdwn",
						"text": "Last Updated: {LAST_UPDATE}\nNext Update (Estimated): {NEXT_UPDATE}"
					}
				]
			},
			{
				"type": "divider"
			},
			{
				"type": "context",
				"elements": [
					{
						"type": "mrkdwn",
						"text": "*Update Frequency*\nAvatars are changed at the top of every hour."
					}
				]
			},
			{
				"type": "actions",
				"elements": [
					{
						"type": "static_select",
						"placeholder": {
							"type": "plain_text",
							"text": "Select an item",
							"emoji": true
						},
						"initial_option": {INITIAL_OPTION},
						"options": [
							{OPTION_LIST}
						],
						"action_id": "static_select-action"
					}
				]
			}
		]
	}
}